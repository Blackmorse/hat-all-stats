# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /league                     controllers.LeagueController.bestTeams(leagueId: Int, currentSeason: Int, page: Int ?= 0, statsType: models.web.StatsType ?= models.web.Avg, sortBy: String ?= "hatstats")
GET     /league/bestLeagueUnits     controllers.LeagueController.bestLeagueUnits(leagueId: Int, currentSeason: Int, page: Int ?= 0, statsType: models.web.StatsType ?= models.web.Avg, sortBy: String ?= "hatstats")
GET     /league/playerStats         controllers.LeagueController.playerStats(leagueId: Int, season: Int, page: Int ?=0, statsType: models.web.StatsType ?= models.web.Accumulate, sortBy: String ?= "scored")
GET     /league/teamState           controllers.LeagueController.teamState(leagueId: Int, season: Int, page: Int ?=0, statsTypeOpt: Option[models.web.StatsType] ?= None, sortBy: String ?= "rating")

GET     /divisionlevel              controllers.DivisionLevelController.bestTeams(leagueId: Int, currentSeason: Int, divisionLevel: Int, page: Int ?= 0, statsType: models.web.StatsType ?= models.web.Avg, sortBy: String ?= "hatstats")
GET     /divisionlevel/bestLeagueUnits      controllers.DivisionLevelController.bestLeagueUnits(leagueId: Int, currentSeason: Int, divisionLevel: Int, page: Int ?= 0, statsType: models.web.StatsType ?= models.web.Avg, sortBy: String ?= "hatstats")
GET     /divisionlevel/playerStats  controllers.DivisionLevelController.playerStats(leagueId: Int, currentSeason: Int, divisionLevel: Int, page: Int ?= 0, statsType: models.web.StatsType ?= models.web.Accumulate, sortBy: String ?= "scored")
GET     /divisionlevel/teamState    controllers.DivisionLevelController.teamState(leagueId: Int, currentSeason: Int, divisionLevel: Int, page: Int ?= 0, statsTypeOpt: Option[models.web.StatsType] ?= None, sortBy: String ?= "rating")

GET     /leagueLevelUnit        controllers.LeagueUnitController.bestTeams(leagueUnitId: Long, season: Int, page: Int ?= 0, statsType: models.web.StatsType ?= models.web.Avg, sortBy: String ?= "hatstats")
GET     /leagueLevelUnit/playerStats    controllers.LeagueUnitController.playerStats(leagueUnitId: Long, season: Int, page: Int ?= 0, statsType: models.web.StatsType ?= models.web.Accumulate, sortBy: String ?= "scored")
GET     /leagueLevelUnit/teamState      controllers.LeagueUnitController.teamState(leagueUnitOd: Long, season: Int, page: Int ?= 0, statsType: Option[models.web.StatsType] ?= None, sortBy: String ?= "rating")

GET     /team/matches               controllers.TeamController.matches(teamId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
