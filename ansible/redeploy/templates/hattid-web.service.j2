[Unit]
Description=Hattid Web

[Service]
WorkingDirectory={{ base_project_directory }}/hat-all-stats
ExecStart={{ base_project_directory }}/hat-all-stats/web/target/dist/web-1.0-SNAPSHOT/bin/web -Dhttp.port={{ web.port }}
User={{ ansible_user_id }}
Type=simple
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target